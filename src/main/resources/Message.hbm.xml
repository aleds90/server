<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="DAO.Message" table="message">
        <id name="id_message" column="id_message" type="integer">
            <generator class="increment" />
        </id>
        <property name="text" column="text" type="string" not-null="true"/>
        <property name="read" column="read" type="java.lang.Boolean" not-null="true"/>
        <property name="sendetAt" column="sendetAt" type="java.util.Date" not-null="true"/>

        <many-to-one name="id_sender" class="DAO.User" column="id_sender"/>
        <many-to-one name="id_receiver" class="DAO.User" column="id_receiver" />



    </class>
</hibernate-mapping>