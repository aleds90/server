<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Token.RefreshToken" table="refresh_token">
        <id name="token_id" column="token_id" type="integer">
            <generator class="increment" />

        </id>

        <property name="expair_app" column="expair_app" type="timestamp" not-null="true" />
        <property name="token" column="token" type="string" not-null="true"/>
        <property name="id_client" column="id_client" type="integer" not-null="true"/>
        <property name="id_user" column="id_user" type="integer" not-null="true"/>

    </class>
</hibernate-mapping>